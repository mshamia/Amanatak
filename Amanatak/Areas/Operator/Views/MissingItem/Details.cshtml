@using Amanatak.Models
@model MissingItemViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<title>  تفاصيل بلاغ عن مفقودات</title>


<!-- MAIN CONTENT -->
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                 
          
            </h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
          
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    <!-- widget grid -->
    <section id="widget-grid">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-sm-12 col-md-12 col-lg-8 col-lg-offset-2">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false"
                     data-widget-deletebutton="false">
                   
                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>تفاصيل</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">






                            <div>
                                <dl class="dl-horizontal">
                                    <dt>
                                        التصنيف

                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Item.ItemType.Name)
                                    </dd>

                                    <dt>
                                        رقم الطلب
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Item.SerialNumber)
                                    </dd>

                                    <dt>
                                        الوصف
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Item.ItemDetails)
                                    </dd>


                                    <dt>
                                        الإسم الكامل
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ItemOwner.FullName)
                                    </dd>

                                    <dt>
                                        رقم الهوية
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ItemOwner.IdentificationNo)
                                    </dd>
                                    <dt>
                                        جوال
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ItemOwner.Mobile)
                                    </dd>
                                    <dt>
                                        الجنسية
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.ItemOwner.Nationality.Name)
                                    </dd>




    </dl>


                                <div id="content">

                                     

                                    <!-- row -->
                                    @using (Html.BeginForm("DeliveryItem", "MissingItem", FormMethod.Get))
                                    {
                                        if (Model.Item.Deliveried == false)
                                        {
                                    <div class="row">
                                      <div class="form-group">
                                          <div class="form-horizontal">
                                               <div class="col-md-10">
                                                  @Html.TextBox("SerialNumber",null, new {@placeHolder= "رقم الطلب إن وجد",     @class = "form-control" })
                                              </div>
                                              @Html.Hidden("ItemId", Model.Item.Id)
                                          </div>
                                          <div class="form-group">

                                              <div class="col-md-10">
                                                  @Html.TextBox("DeliveryNamePerson", null , new {  @placeHolder = "اسم الشخص" ,@class="form-control"})


                                                  
                                               </div>
                                          </div>
                                        <div class="form-group">
                                            
                                            <div class="col-md-10">
                                                @Html.TextArea("Details", new { @class = "control-control", @style = "width:100%" ,@placeHolder= "تفاصيل" })
                                             </div>
                                        </div>
                                        <br />
                                       
                                           <div class="row">
                                                <div class="col-md-12">
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fa fa-save"></i>
                                                        تسليم
                                                    </button>
                                                </div>
                                            </div>
                                                @*<a href="@Url.Action("DeliveryItem", new { id = Model.Item.Id })" class="btn btn-primary"><span class="fa fa-edit"></span> تسليم</a>*@
                                        
                                            
                                          
                                            <!-- SuperBox -->
                                          <div class="superbox col-sm-12">
                                              @foreach (var item in Model.ItemImagesList)
                                              {
                                                  <div class="superbox-list" style="width:30.5%">
                                                      <a target="_blank" href="~/ItemsImages/@item.ImagePath">  <img src="~/ItemsImages/@item.ImagePath" data-img="~/ItemsImages/@item.ImagePath" alt="Item" class="superbox-img"></a>
                                                  </div>
                                              }
                                          </div>
                                          
                                            </div>
                                       
                                            <!-- /SuperBox -->

 
                                        </div>
                                        }
                                    <!-- end row -->
                                    }
                                </div>
</div>
  <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-12">

 <a class="btn btn-default" type="button" href="@Url.Action("Index")">
                           عودة إلى القائمة
                                        </a>
                                  

 </div>
                                </div>
                            </div>

                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->


