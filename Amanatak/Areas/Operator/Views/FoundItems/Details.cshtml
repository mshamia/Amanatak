@using Amanatak.Models
@model MissingItemViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}







<!-- MAIN CONTENT -->
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->


            </h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">

        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    <!-- widget grid -->
    <section id="widget-grid">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-sm-12 col-md-12 col-lg-8 col-lg-offset-2">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false"
                     data-widget-deletebutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>تفاصيل</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">






                            <div>
                                <dl class="dl-horizontal">
                                    <dt>
                                        التصنيف

                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Item.ItemType.Name)
                                    </dd>

                                    <dt>
                                        رقم الطلب
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Item.SerialNumber)
                                    </dd>

                                    <dt>
                                        الوصف
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Item.ItemDetails)
                                    </dd>






                                </dl>


                                <div id="content">

                                    <div class="superbox col-sm-12">
                                        @foreach (var item in Model.ItemImagesList)
                                        {
                                            <div class="superbox-list" style="width:30.5%">
                                                <a target="_blank" href="~/ItemsImages/@item.ImagePath">  <img src="~/ItemsImages/@item.ImagePath" data-img="~/ItemsImages/@item.ImagePath" alt="Item" class="superbox-img"></a>
                                            </div>
                                        }
                                    </div>





                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-12">

                                        <a class="btn btn-default" type="button" href="@Url.Action("Index")">
                                            عودة إلى القائمة
                                        </a>


                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->

    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
